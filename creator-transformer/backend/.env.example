# Creator Transformer Backend Environment Variables
# Copy this file to .env and fill in your values

# Required: Hugging Face API Token
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=your_hugging_face_api_token_here

# Optional: CORS Configuration
# Add your frontend domain for production
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# Optional: Model Configuration
SUM_MODEL=facebook/bart-large-cnn
GEN_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Optional: API Limits
MAX_INPUT_CHARS=50000
EXTRACT_RATE_LIMIT=10/minute
GENERATE_RATE_LIMIT=5/minute

# Optional: Environment
ENVIRONMENT=development
